{
  "name": "Conversation",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the conversation"
    },
    "messages": {
      "type": "array",
      "description": "Messages in the conversation",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": [
              "user",
              "assistant"
            ]
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "last_message_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "title"
  ]
}